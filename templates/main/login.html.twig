{% extends 'center.html.twig' %}
{% import 'shared/alert.html.twig' as alert %}

{% set _body = { class: 'text-center', gray: true } %}
{% block body %}
  <form method="post" autocomplete="off" class="form-signin">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    {% if error %}
      {{ alert.show(error.messageKey|trans(error.messageData, 'security')) }}
    {% endif %}

    <div class="form-floating">
      <input required name="_username" type="text" class="form-control" id="txtUsername" placeholder="Username or email" value="{{ username }}">
      <label for="txtUsername">Username or email</label>
    </div>
    <div class="form-floating">
      <input required name="_password" type="password" class="form-control" id="txtPassword" placeholder="Password">
      <label for="txtPassword">Password</label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input name="_remember" type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-muted">&copy; {{ project.elapsedYear }}</p>
  </form>
{% endblock %}